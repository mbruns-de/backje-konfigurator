    <link rel="apple-touch-icon" sizes="114x114" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-114x114.png') }}">
    <link rel="apple-touch-icon" sizes="120x120" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-120x120.png') }}">
    <link rel="apple-touch-icon" sizes="144x144" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-144x144.png') }}">
    <link rel="apple-touch-icon" sizes="152x152" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-152x152.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-180x180.png') }}">
    <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('_icons/' ~ icon_subfolder ~ 'android-icon-192x192.png') }}">
    <link rel="icon" type="image/png" sizes="32x32"  href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="96x96"  href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon-96x96.png') }}">
    <link rel="icon" type="image/png" sizes="16x16"  href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon-16x16.png') }}">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ asset('_icons/' ~ icon_subfolder ~ 'ms-icon-144x144.png') }}">
    <meta name="theme-color" content="#ffffff">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/signature_pad.umd.min.js') }}"></script> {# szimek #}
    <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('assets/js/sweetalert2.all.min.js') }}"></script>
    <script src="{{ asset('assets/js/app.js') }}" type="module"></script>

{% endblock %}

