{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap-icons-1.11.3/font/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/sweetalert2.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">

    {% set icon_subfolder = '' %}

    {% if icon_prefix is not null %}
        {% set icon_subfolder = icon_prefix ~ '/' %}
    {% endif %}

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon.ico') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon.ico') }}">
    <link rel="icon" type="image/gif" href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon.gif') }}">
    <link rel="icon" type="image/png" href="{{ asset('_icons/' ~ icon_subfolder ~ 'favicon.png') }}">

    {# favicon-generator.org #}
    <link rel="apple-touch-icon" sizes="57x57" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-57x57.png') }}">
    <link rel="apple-touch-icon" sizes="60x60" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-60x60.png') }}">
    <link rel="apple-touch-icon" sizes="72x72" href= "{{ asset('_icons/' ~ icon_subfolder ~ 'apple-icon-72x72.png') }}">
